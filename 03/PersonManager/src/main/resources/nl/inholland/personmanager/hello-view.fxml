<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<!--<VBox alignment="CENTER" prefHeight="484.0" prefWidth="717.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12"-->
<!--      xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.inholland.personmanager.HelloController">-->
<VBox alignment="CENTER" prefHeight="484.0" prefWidth="717.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1" >
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <children>
        <TableView fx:id="peopleTableView">
            <columns>
                <TableColumn prefWidth="75.0" text="First name">
                    <cellValueFactory>
                        <PropertyValueFactory property="firstName" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="Last name">
                    <cellValueFactory>
                        <PropertyValueFactory property="lastName" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="75.0" text="Birth date">
                    <cellValueFactory>
                        <PropertyValueFactory property="birthDate" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
        <HBox spacing="10.0">
            <children>
                <TextField fx:id="firstName" promptText="First name"/>
                <TextField fx:id="lastName" promptText="Last name"/>
                <DatePicker fx:id="birthDate" promptText="Birth date"/>
                <Button mnemonicParsing="false" text="Add" onAction="#onAddButtonClick"/>
                <Button mnemonicParsing="false" text="Delete" onAction="#onDeleteButtonClick"/>
                <Button mnemonicParsing="false" text="Logout" onAction="#onLogoutButtonClick"/>
            </children>
        </HBox>
    </children>


</VBox>
